<%= form_with(url: search_products_path, method: :get, local: true) do |form| %>
  <div class="field is-grouped">
    <div class="control is-flex is-align-items-center is-space-x-1">
      <div class="field has-addons">
        <div class="control is-relative">
          <%= form.text_field :keywords, class: "input is-rounded is-transitioned is-fullwidth is-border is-hover:border-blue-500 margin-top", placeholder: 'Search for Products' %>
        </div>
      </div>

      <%= form.select :category_id, Category.all.collect { |c| [c.name, c.id] }, { include_blank: 'All Categories' }, class: 'select is-border', style: 'margin-left: 8px; height: 40px;' %>

      <%= form.submit "Search", class: "button is-primary is-rounded-r-lg is-p-2 is-hover:bg-blue-600 is-focus:outline-none is-focus:ring-2 is-focus:ring-blue-300", style: 'margin-left: 8px; height: 40px;' %>
    </div>
  </div>
<% end %>
