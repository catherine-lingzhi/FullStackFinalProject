
  <div class="container">
    <h1 class="title is-2">Order Details</h1>
    <% if @order.present? %>
    <div class="columns is-multiline">
      <% @order.order_details.each do |order_detail| %>
        <div class="column is-full">
            <div class="columns ">
              <div class="column ">
              <% if order_detail.product.image.attached? %>
                <%= image_tag rails_blob_path(order_detail.product.image, only_path: true), alt: order_detail.product.name, class: "image is-128x128 mb-3" %>
              <% else %>
                <p>No Image</p>
              <% end %>
            </div>
            <div class="column">
              <p class="title is-5"><%= order_detail.product.name %></p>
              <p class="mt-1 subtitle is-6 has-text-grey"><%= truncate(order_detail.product.description, length: 100) %></p>
            </div>
            <div class="column">
              <p class="title is-5">Quantity</p>
              <p class="mt-1 subtitle is-6 has-text-grey"><%= order_detail.quantity %></p>
            </div>
            <div class="column">
              <p class="title is-5">Price</p>
              <p class="has-text-success has-text-weight-bold">$<%= order_detail.price %></p>
            </div>
        </div>
      <% end %>
      <div class="columns">
              <div class="column">
          <p>Status: <%= @order. order_status%></p>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <p>Subtotal: <%= number_to_currency(@order.subtotal) %></p>
        </div>
      </div>
      <div class="columns">
        <div class="column">
         <p></p><strong>GST:</strong> <%= @order.gst %></p>
          <p><strong>PST:</strong> <%= @order.pst %></p>
          <p><strong>HST:</strong> <%= @order.hst %></p>
        </div>
      </div>
            <div class="columns">
        <div class="column">
          <p>Total: <%= number_to_currency((@order.subtotal) * (1 + @order.gst + @order.pst + @order.hst)) %></p>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <%= link_to 'Back to Orders', orders_path %>
        </div>
         <div class="column">
          <%= link_to 'Checkout', class: 'button is-info'  %>
        </div>
      </div>
      </div>
    <% else %>
      <p class="subtitle is-6">Order not found.</p>
    <% end %>
  </div>

