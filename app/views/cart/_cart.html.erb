<main class="section">
  <div class="container">
    <h1 class="title is-2">Shopping Cart</h1>
    <% if cart.present? %>
      <div class="columns is-multiline">
        <% cart.each do |item| %>
          <div class="column is-full">
            <div class="box">
              <div class="columns ">
                <div class="column ">
                    <% if item["product"].image.attached? %>
                      <%= image_tag rails_blob_path(item["product"].image, only_path: true), alt: item["product"].name, class: "image is-128x128 mb-3" %>
                      <% else %>
                        <p>No Image</p>
                    <% end %>
                </div>
                <div class="column ">
                  <p class="title is-5"><%= item["product"].name %></p>
                  <p class="mt-1 subtitle is-6 has-text-grey"><%= truncate(item["product"].description, length: 100) %></p>
                </div>
                <div class="column">
                 <p class="title is-5">Quantity</p>
                  <p class="mt-3 ml-5 subtitle is-6 has-text-grey"><%= item["quantity"] %></p>
                </div>
                <div class="column">
                  <p class="title is-5">Price</p>
                  <p class="has-text-success has-text-weight-bold">$<%= item["product"].price %></p>
                </div>
                <div class="column mt-6">
                   <%= link_to 'Remove', cart_path(item["product"]), 'data-turbo-method': :delete, class: 'button is-danger is-small' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="columns">
        <div class="column is-full">
          <div class="box">
            <div class="level">
              <div class="level-left">
                <div class="level-item">
                  <p class="has-text-weight-bold">Subtotal: <%= number_to_currency(@total_price) %></p>
                </div>
              </div>
              <div class="level-right">
                <div class="level-item">
                  <p class="has-text-success has-text-weight-bold"></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <p class="subtitle is-6">Your cart is empty.</p>
    <% end %>
  </div>
</main>
